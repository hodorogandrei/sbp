extends layout

block content
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
        .container-fluid
            .navbar-header
                a.navbar-brand Sustainable Building Project

    .page-wrapper
        .container
            .graph-container
            .text-center
                button.btn.btn-warning(id="resetZoom")
                    span.glyphicon.glyphicon-refresh
                    | &nbsp; Reset Zoom
                button.btn.btn-warning.change-unit(data-value="24",  data-unit="hours") Last day
                button.btn.btn-warning.change-unit(data-value="7",  data-unit="days") Last 7 days
                button.btn.btn-warning.change-unit(data-value="30", data-unit="days") Last 30 days

    script(src="js/libraries.js")
    script(src="js/vendor.js")
    script(src="js/graphs.js")
